<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.igor.jetpackcompose">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:theme="@style/Theme.JetpackCompose">
        <activity
            android:name=".ui.AnimationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ListAndAnimationActivity"
            android:exported="false"
            android:label="@string/title_activity_list_and_animation"
            android:theme="@style/Theme.JetpackCompose.NoActionBar" />
        <activity
            android:name=".TestActivity"
            android:exported="false"
            android:label="@string/title_activity_test"
            android:theme="@style/Theme.JetpackCompose.NoActionBar" />
        <activity
            android:name=".TabsActivity"
            android:exported="false"
            android:label="@string/title_activity_tabs"
            android:theme="@style/Theme.JetpackCompose.NoActionBar" />
        <activity
            android:name=".ui.MeuhedetActivity"
            android:exported="false"
            android:label="@string/title_activity_meuhedet"
            android:theme="@style/Theme.JetpackCompose.NoActionBar" />
        <activity
            android:name=".LazyColumActivity"
            android:exported="true"
            android:label="@string/title_activity_lazt_colum"
            android:theme="@style/Theme.JetpackCompose.NoActionBar" />
        <activity
            android:name=".ExpandableCardActivity"
            android:exported="true"
            android:label="@string/title_activity_expandable_card"
            android:theme="@style/Theme.JetpackCompose.NoActionBar" />
        <activity
            android:name=".TextCostomizationActivity"
            android:exported="true"
            android:label="@string/title_activity_text_costomization"
            android:theme="@style/Theme.JetpackCompose.NoActionBar" />
        <activity
            android:name=".BoxLayoutActivity"
            android:exported="true"
            android:label="@string/title_activity_box_layout"
            android:theme="@style/Theme.JetpackCompose.NoActionBar" />
        <activity
            android:name=".RowActivity"
            android:exported="false"
            android:label="@string/title_activity_row"
            android:theme="@style/Theme.JetpackCompose.NoActionBar" />
        <activity
            android:name=".ColumnActivity"
            android:exported="false"
            android:label="@string/title_activity_column"
            android:theme="@style/Theme.JetpackCompose.NoActionBar" />
        <activity
            android:name=".MessagesListActivity"
            android:exported="false"
            android:label="@string/title_activity_messages_list"
            android:theme="@style/Theme.JetpackCompose.NoActionBar" />
        <activity
            android:name=".OneMessageActivity"
            android:exported="false"
            android:label="@string/title_activity_one_message"
            android:theme="@style/Theme.JetpackCompose.NoActionBar" />
        <activity
            android:name=".view_pager.ViewPagerActivity"
            android:exported="false"
            android:label="@string/title_activity_view_pager"
            android:theme="@style/Theme.JetpackCompose.NoActionBar" />
        <activity
            android:name=".download_manager.DownloadActivity"
            android:exported="false"
            android:label="@string/title_activity_view_pager"
            android:theme="@style/Theme.JetpackCompose.NoActionBar" />

        <activity
            android:name="com.igor.flow.FlowActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.JetpackCompose.NoActionBar"/>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.JetpackCompose.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".download_manager.DownloadCompletedReceiver" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
            </intent-filter>
        </receiver>
    </application>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>